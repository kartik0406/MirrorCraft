<%-include('../partials/header')%>


<div class="container">
    <div class="row">
        <h1 style="text-align:center" class="white-color">Create a New Comment</h1>
        <div style="width:30%;margin:30px auto">
            <form action="/campground/<%=id%>/comments" method="POST">
               
                
                <div class="form-group">
                    <textarea class="form-control" name="comment" placeholder="comment" id="text" cols="30" rows="10">

                    </textarea>
                   
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%=id%>">Go back</a>
        </div>

    </div>
</div>

<%-include('../partials/footer')%>