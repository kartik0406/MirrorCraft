<%-include('../partials/header')%>


<div class="container">
    <div class="row">
        <h1 style="text-align:center" class="white-color">Edit Comment</h1>
        <div style="width:30%;margin:30px auto">
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
               
                
                <div class="form-group">
                 <input type="text"size="43" class="form-control input-lg" name="comment" value="<%=comment.text%>">
                   
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%=campground_id%>">Go back</a>
        </div>

    </div>
</div>

<%-include('../partials/footer')%>