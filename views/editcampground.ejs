<%-include('partials/header')%>

<div class="container">
    <div class="row">
        <h1 style="text-align:center" class="white-color">Edit <%=campground.name%></h1>
        <div style="width:30%;margin:30px auto">
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=campground.name%>" name="campgrounds[name]" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campgrounds[image]" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campgrounds[description]" value="<%=campground.description%>">
                </div>
               
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>

    </div>
</div>
<%-include('partials/footer')%>